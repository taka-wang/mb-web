redis:
    image: takawang/redis:armhf
    ports:
        - "6379"

mongodb:
    image: takawang/mongo:armhf
    ports:
        - "27017"
slave:
    image: edgepro/c-modbus-slave:armhf

modbusd:
    image: edgepro/modbusd:armhf
    volumes:
        - /tmp:/tmp
    links:
        - slave

psmbtcpsrv:
    image: edgepro/psmb-srv:armhf
    volumes_from:
        - modbusd
    links:
        - redis
        - mongodb

mbweb:
    build: .
    dockerfile: Dockerfile.armhf
    volumes_from:
        - modbusd
    links:
        - slave
    volumes:
        - /var/tmp:/var/tmp # mount for test